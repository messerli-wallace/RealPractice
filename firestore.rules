rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;

      allow create: if (
        request.auth != null &&
        request.auth.uid == userId
      );

      allow update: if (
        request.auth != null &&
        request.auth.uid == userId
      );

      allow delete: if (
        request.auth != null &&
        request.auth.uid == userId
      );

      allow list: if (
        request.auth != null &&
        request.query.limit <= 50
      );
    }
  }
}
